{
  "openapi": "3.0.3",
  "info": {
    "title": "GEMA Admin API",
    "version": "1.0.0",
    "description": "Administrative endpoints for managing students, assignments, grading, analytics, and activity logs in the GEMA LMS. Version 1.0.0 captures the final Phase 6 surface area, including analytics caching and activity feeds."
  },
  "servers": [
    { "url": "https://api.gema.dev", "description": "Production" },
    { "url": "https://staging.api.gema.dev", "description": "Staging" }
  ],
  "security": [ { "bearerAuth": [] } ],
  "paths": {
    "/api/admin/students": {
      "get": {
        "summary": "List students",
        "tags": ["Students"],
        "parameters": [
          { "name": "page", "in": "query", "schema": { "type": "integer", "minimum": 1 } },
          { "name": "page_size", "in": "query", "schema": { "type": "integer", "minimum": 1, "maximum": 100 } },
          { "name": "search", "in": "query", "schema": { "type": "string" } },
          { "name": "class", "in": "query", "schema": { "type": "string" } },
          { "name": "status", "in": "query", "schema": { "type": "string", "enum": ["active", "inactive", "archived", "suspended"] } }
        ],
        "responses": {
          "200": {
            "description": "Students retrieved",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AdminStudentListResponseEnvelope"
                }
              }
            }
          }
        }
      }
    },
    "/api/admin/students/{id}": {
      "patch": {
        "summary": "Update student",
        "tags": ["Students"],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "integer", "minimum": 1 } }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/AdminStudentUpdateRequest" }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Student updated",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/AdminStudentEnvelope" }
              }
            }
          }
        }
      },
      "get": {
        "summary": "Get student",
        "tags": ["Students"],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "integer", "minimum": 1 } }
        ],
        "responses": {
          "200": {
            "description": "Student details",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/AdminStudentEnvelope" }
              }
            }
          },
          "404": { "$ref": "#/components/responses/NotFound" }
        }
      },
      "delete": {
        "summary": "Delete student",
        "tags": ["Students"],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "integer", "minimum": 1 } }
        ],
        "responses": {
          "200": { "$ref": "#/components/responses/GenericSuccess" },
          "404": { "$ref": "#/components/responses/NotFound" }
        }
      }
    },
    "/api/admin/assignments": {
      "post": {
        "summary": "Create assignment",
        "tags": ["Assignments"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/AdminAssignmentCreateRequest" }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Assignment created",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/AdminAssignmentEnvelope" }
              }
            }
          }
        }
      }
    },
    "/api/admin/assignments/{id}": {
      "patch": {
        "summary": "Update assignment",
        "tags": ["Assignments"],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "integer", "minimum": 1 } }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/AdminAssignmentUpdateRequest" }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Assignment updated",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/AdminAssignmentEnvelope" }
              }
            }
          },
          "404": { "$ref": "#/components/responses/NotFound" }
        }
      },
      "delete": {
        "summary": "Delete assignment",
        "tags": ["Assignments"],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "integer", "minimum": 1 } }
        ],
        "responses": {
          "200": { "$ref": "#/components/responses/GenericSuccess" },
          "404": { "$ref": "#/components/responses/NotFound" }
        }
      },
      "get": {
        "summary": "Get assignment",
        "tags": ["Assignments"],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "integer", "minimum": 1 } }
        ],
        "responses": {
          "200": {
            "description": "Assignment details",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/AdminAssignmentEnvelope" }
              }
            }
          },
          "404": { "$ref": "#/components/responses/NotFound" }
        }
      }
    },
    "/api/admin/submissions/{id}/grade": {
      "patch": {
        "summary": "Grade submission",
        "tags": ["Grading"],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "integer", "minimum": 1 } }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/AdminGradeSubmissionRequest" }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Submission graded",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/SubmissionEnvelope" }
              }
            }
          },
          "404": { "$ref": "#/components/responses/NotFound" }
        }
      }
    },
    "/api/admin/analytics": {
      "get": {
        "summary": "Analytics summary",
        "tags": ["Analytics"],
        "responses": {
          "200": {
            "description": "Aggregated analytics",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/AdminAnalyticsEnvelope" }
              }
            }
          }
        }
      }
    },
    "/api/admin/activities": {
      "get": {
        "summary": "List activity logs",
        "tags": ["Activity"],
        "parameters": [
          { "name": "page", "in": "query", "schema": { "type": "integer", "minimum": 1 } },
          { "name": "page_size", "in": "query", "schema": { "type": "integer", "minimum": 1, "maximum": 200 } },
          { "name": "actor_id", "in": "query", "schema": { "type": "integer", "minimum": 1 } },
          { "name": "action", "in": "query", "schema": { "type": "string" } },
          { "name": "entity_type", "in": "query", "schema": { "type": "string" } }
        ],
        "responses": {
          "200": {
            "description": "Activity logs",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/AdminActivityListEnvelope" }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create activity log",
        "tags": ["Activity"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/AdminActivityCreateRequest" }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Activity log created",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/AdminActivityEnvelope" }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "responses": {
      "GenericSuccess": {
        "description": "Operation successful",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "required": ["success", "message", "data"],
              "properties": {
                "success": { "type": "boolean" },
                "message": { "type": "string" },
                "data": { "type": "object" }
              }
            }
          }
        }
      },
      "NotFound": {
        "description": "Resource not found",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "required": ["success", "message"],
              "properties": {
                "success": { "type": "boolean", "const": false },
                "message": { "type": "string" }
              }
            }
          }
        }
      }
    },
    "schemas": {
      "AdminStudent": {
        "type": "object",
        "required": ["id", "name", "email", "status", "created_at", "updated_at"],
        "properties": {
          "id": { "type": "integer" },
          "name": { "type": "string" },
          "email": { "type": "string", "format": "email" },
          "class": { "type": "string" },
          "status": { "type": "string" },
          "flagged": { "type": "boolean" },
          "notes": { "type": "string" },
          "flags": { "type": "object", "additionalProperties": { "type": "boolean" } },
          "created_at": { "type": "string", "format": "date-time" },
          "updated_at": { "type": "string", "format": "date-time" }
        }
      },
      "AdminStudentUpdateRequest": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "email": { "type": "string", "format": "email" },
          "class": { "type": "string" },
          "status": { "type": "string", "enum": ["active", "inactive", "archived", "suspended"] },
          "flagged": { "type": "boolean" },
          "notes": { "type": "string" },
          "flags": { "type": "object", "additionalProperties": { "type": "boolean" } }
        }
      },
      "AdminStudentEnvelope": {
        "type": "object",
        "required": ["success", "message", "data"],
        "properties": {
          "success": { "type": "boolean" },
          "message": { "type": "string" },
          "data": { "$ref": "#/components/schemas/AdminStudent" }
        }
      },
      "AdminStudentListResponseEnvelope": {
        "type": "object",
        "required": ["success", "message", "data"],
        "properties": {
          "success": { "type": "boolean" },
          "message": { "type": "string" },
          "data": {
            "type": "object",
            "required": ["items", "pagination"],
            "properties": {
              "items": {
                "type": "array",
                "items": { "$ref": "#/components/schemas/AdminStudent" }
              },
              "pagination": {
                "type": "object",
                "required": ["page", "page_size", "total_items", "total_pages"],
                "properties": {
                  "page": { "type": "integer" },
                  "page_size": { "type": "integer" },
                  "total_items": { "type": "integer" },
                  "total_pages": { "type": "integer" }
                }
              }
            }
          }
        }
      },
      "AdminAssignment": {
        "type": "object",
        "required": ["id", "title", "description", "due_date", "max_score", "created_at", "updated_at"],
        "properties": {
          "id": { "type": "integer" },
          "title": { "type": "string" },
          "description": { "type": "string" },
          "due_date": { "type": "string", "format": "date-time" },
          "file_url": { "type": "string", "format": "uri" },
          "max_score": { "type": "number" },
          "rubric": { "type": "object", "additionalProperties": { "type": "number" } },
          "created_at": { "type": "string", "format": "date-time" },
          "updated_at": { "type": "string", "format": "date-time" }
        }
      },
      "AdminAssignmentCreateRequest": {
        "type": "object",
        "required": ["title", "due_date", "max_score"],
        "properties": {
          "title": { "type": "string" },
          "description": { "type": "string" },
          "due_date": { "type": "string", "format": "date-time" },
          "max_score": { "type": "number", "minimum": 0 },
          "rubric": { "type": "object", "additionalProperties": { "type": "number" } },
          "file_url": { "type": "string", "format": "uri" }
        }
      },
      "AdminAssignmentUpdateRequest": {
        "type": "object",
        "properties": {
          "title": { "type": "string" },
          "description": { "type": "string" },
          "due_date": { "type": "string", "format": "date-time" },
          "max_score": { "type": "number", "minimum": 0 },
          "rubric": { "type": "object", "additionalProperties": { "type": "number" } },
          "file_url": { "type": "string", "format": "uri" }
        }
      },
      "AdminAssignmentEnvelope": {
        "type": "object",
        "required": ["success", "message", "data"],
        "properties": {
          "success": { "type": "boolean" },
          "message": { "type": "string" },
          "data": { "$ref": "#/components/schemas/AdminAssignment" }
        }
      },
      "Submission": {
        "type": "object",
        "required": ["id", "assignment", "student", "status", "created_at", "updated_at"],
        "properties": {
          "id": { "type": "integer" },
          "assignment": { "$ref": "#/components/schemas/AdminAssignment" },
          "student": { "$ref": "#/components/schemas/AdminStudent" },
          "status": { "type": "string" },
          "grade": { "type": "number", "nullable": true },
          "feedback": { "type": "string" },
          "graded_at": { "type": "string", "format": "date-time", "nullable": true },
          "graded_by": { "type": "integer", "nullable": true },
          "created_at": { "type": "string", "format": "date-time" },
          "updated_at": { "type": "string", "format": "date-time" }
        }
      },
      "SubmissionEnvelope": {
        "type": "object",
        "required": ["success", "message", "data"],
        "properties": {
          "success": { "type": "boolean" },
          "message": { "type": "string" },
          "data": { "$ref": "#/components/schemas/Submission" }
        }
      },
      "AdminGradeSubmissionRequest": {
        "type": "object",
        "required": ["score"],
        "properties": {
          "score": { "type": "number", "minimum": 0 },
          "feedback": { "type": "string" }
        }
      },
      "AdminAnalytics": {
        "type": "object",
        "required": [
          "active_students",
          "on_time_submissions",
          "late_submissions",
          "grade_distribution",
          "weekly_engagement",
          "generated_at",
          "cache_hit"
        ],
        "properties": {
          "active_students": { "type": "integer" },
          "on_time_submissions": { "type": "integer" },
          "late_submissions": { "type": "integer" },
          "grade_distribution": {
            "type": "object",
            "additionalProperties": { "type": "integer" }
          },
          "weekly_engagement": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["week_start", "submissions"],
              "properties": {
                "week_start": { "type": "string", "format": "date-time" },
                "submissions": { "type": "integer" }
              }
            }
          },
          "generated_at": { "type": "string", "format": "date-time" },
          "cache_hit": { "type": "boolean" }
        }
      },
      "AdminAnalyticsEnvelope": {
        "type": "object",
        "required": ["success", "message", "data"],
        "properties": {
          "success": { "type": "boolean" },
          "message": { "type": "string" },
          "data": { "$ref": "#/components/schemas/AdminAnalytics" }
        }
      },
      "AdminActivity": {
        "type": "object",
        "required": ["id", "actor_id", "actor_role", "action", "entity_type", "created_at"],
        "properties": {
          "id": { "type": "integer" },
          "actor_id": { "type": "integer" },
          "actor_role": { "type": "string" },
          "action": { "type": "string" },
          "entity_type": { "type": "string" },
          "entity_id": { "type": "integer", "nullable": true },
          "metadata": { "type": "object", "additionalProperties": true },
          "created_at": { "type": "string", "format": "date-time" }
        }
      },
      "AdminActivityEnvelope": {
        "type": "object",
        "required": ["success", "message", "data"],
        "properties": {
          "success": { "type": "boolean" },
          "message": { "type": "string" },
          "data": { "$ref": "#/components/schemas/AdminActivity" }
        }
      },
      "AdminActivityCreateRequest": {
        "type": "object",
        "required": ["action", "entity_type"],
        "properties": {
          "action": { "type": "string" },
          "entity_type": { "type": "string" },
          "entity_id": { "type": "integer" },
          "metadata": { "type": "object", "additionalProperties": true }
        }
      },
      "AdminActivityListEnvelope": {
        "type": "object",
        "required": ["success", "message", "data"],
        "properties": {
          "success": { "type": "boolean" },
          "message": { "type": "string" },
          "data": {
            "type": "object",
            "required": ["items", "pagination"],
            "properties": {
              "items": {
                "type": "array",
                "items": { "$ref": "#/components/schemas/AdminActivity" }
              },
              "pagination": {
                "type": "object",
                "required": ["page", "page_size", "total_items", "total_pages"],
                "properties": {
                  "page": { "type": "integer" },
                  "page_size": { "type": "integer" },
                  "total_items": { "type": "integer" },
                  "total_pages": { "type": "integer" }
                }
              }
            }
          }
        }
      }
    }
  }
}
